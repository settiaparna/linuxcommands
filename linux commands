ssh usename@ipaddress-connect the linux vm
sudo -i=change the root directory
pwd=path
touch<filename>=creating a filename
cat<filename>=open the file
vi<filename>=edit the file
shift+:,wq=save the edit file
shift+:q!=quit the file
cp <filename> <destinationfilename>=copy the file
mv <filename> <reqired filename>=change the file name
mkdir <foldername>=creating a directory
cd <foldername>= open the folder 
rm -rf <directoryname>=removing the folder
ll= list of files
mv <oldname > <newname>=change the file and foldername
tar -xvf<filename>=untar the file
unzip <zipfilename>=unzip the file
wget =download
apt update=update the system
sudo useradd <username>=user add
curl -I http://localhost:8080=check the localhost url note :(8080 is port number)
cd=roothome
cd ..=back for one path
cat /etc/os-release=check the os version
apt install default-jdk=java  download (or) wget (link for java)
vi etc/hostname=change the host name
sudo systemctl status servicename=list  the status of service
service --status-all=list the all the services status
systemctl list-units --type=service --state=list for only running services
sudo netstat -tuln | grep :80=checking the port enable or not
sudo ss -tuln=list of all enable port numbers











